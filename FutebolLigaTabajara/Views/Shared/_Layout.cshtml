@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Liga Tabajara</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Estilo personalizado -->
    <style>
        body {
            background-color: #f3fdf4;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background-color: #2e7d32;
        }

        .navbar-brand, .nav-link, .navbar-text {
            color: white !important;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #dcedc8 !important;
            }

        footer {
            background-color: #2e7d32;
            color: white;
            padding: 15px 0;
            text-align: center;
            margin-top: 50px;
        }

        h2 {
            color: #2e7d32;
        }

        .btn-primary {
            background-color: #388e3c;
            border-color: #388e3c;
        }

            .btn-primary:hover {
                background-color: #2e7d32;
                border-color: #2e7d32;
            }

        .alert-success {
            background-color: #c8e6c9;
            color: #2e7d32;
        }

        .alert-danger {
            background-color: #ffcdd2;
            color: #c62828;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Liga Tabajara</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Time")">Times</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Jogadores")">Jogadores</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "ComissaoTecnica")">Comissão Técnica</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Partidas")">Partidas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Estatisticas")">Estatísticas</a>
                    </li>
                </ul>
                <span class="navbar-text">Futebol na Liga Tabajara, Aqui é EMOÇÃO ⚽</span>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Liga Tabajara de Futebol - Emanuel Pinheiro Cirqueira</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
