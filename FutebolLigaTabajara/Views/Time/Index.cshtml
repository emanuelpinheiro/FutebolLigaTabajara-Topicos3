@model IEnumerable<FutebolLigaTabajara.Models.Time>

@{
    ViewBag.Title = "Liga Tabajara de Futebol";
}

<h2>Liga Tabajara de Futebol</h2>

<div class="alert @(ViewBag.LigaStatus == "Apta para iniciar" ? "alert-success" : "alert-danger")">
    <strong>Status da Liga:</strong> @ViewBag.LigaStatus
</div>

<p>
    @Html.ActionLink("Cadastrar Novo Time", "Create", "Time", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Cidade)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.AnoFundacao)</th>
            <th>@Html.DisplayNameFor(model => model.Estadio)</th>
            <th>@Html.DisplayNameFor(model => model.CapacidadeEstadio)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Cidade</td>
                <td>@item.Estado</td>
                <td>@item.AnoFundacao</td>
                <td>@item.Estadio</td>
                <td>@item.CapacidadeEstadio</td>
                <td>
                    @if (item.Status)
                    {
                        <span class="badge bg-success">Apto</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inapto</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Detalhes", "Details", "Time", new { id = item.TimeId }, new { @class = "btn btn-sm btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
