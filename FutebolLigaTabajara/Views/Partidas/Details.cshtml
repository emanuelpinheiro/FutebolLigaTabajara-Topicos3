@model FutebolLigaTabajara.Models.Partida

<h2>Detalhes da Partida</h2>
<p><strong>Data e Hora:</strong> @Model.DataHora</p>
<p><strong>Estádio:</strong> @Model.Estadio</p>
<p><strong>Time da Casa:</strong> @Model.TimeCasa.Nome</p>
<p><strong>Time Visitante:</strong> @Model.TimeFora.Nome</p>
<p><strong>Placar:</strong> @Model.GolsTimeCasa x @Model.GolsTimeFora</p>

<h3>Estatísticas</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Jogador</th>
            <th>Time</th>
            <th>Gols</th>
            <th>Assistências</th>
            <th>Minutos Jogados</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estatistica in Model.Estatisticas)
        {
            <tr>
                <td>@estatistica.Jogador.Nome</td>
                <td>@estatistica.Jogador.Time.Nome</td>
                <td>@estatistica.Gols</td>
                <td>@estatistica.Assistencias</td>
                <td>@estatistica.MinutosJogador</td>
            </tr>
        }
    </tbody>
</table>
