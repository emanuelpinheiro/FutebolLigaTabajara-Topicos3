@model IEnumerable<dynamic>

<h2>Tabela de Classificação</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Posição</th>
            <th>Time</th>
            <th>Pontos</th>
            <th>Saldo de Gols</th>
            <th>Gols Marcados</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((value, index) => new { value, index }))
        {
            <tr>
                <td>@(item.index + 1)</td>
                <td>@item.value.Time.Nome</td>
                <td>@item.value.Pontos</td>
                <td>@item.value.SaldoGols</td>
                <td>@item.value.GolsMarcados</td>
            </tr>
        }
    </tbody>
</table>
