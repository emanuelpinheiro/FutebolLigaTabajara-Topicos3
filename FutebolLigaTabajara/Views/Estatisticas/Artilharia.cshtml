@model IEnumerable<dynamic>

<h2>Artilharia</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Posição</th>
            <th>Jogador</th>
            <th>Time</th>
            <th>Gols</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((value, index) => new { value, index }))
        {
            <tr>
                <td>@(item.index + 1)</td>
                <td>@item.value.Jogador.Nome</td>
                <td>@item.value.Jogador.Time.Nome</td>
                <td>@item.value.Gols</td>
            </tr>
        }
    </tbody>
</table>
