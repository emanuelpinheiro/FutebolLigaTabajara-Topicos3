@model IEnumerable<FutebolLigaTabajara.Models.Time>

@{
    ViewBag.Title = "Página Inicial";
}

<h1>Bem-vindo à Liga Tabajara de Futebol!</h1>

<div class="alert @(ViewBag.LigaStatus == "Apta para iniciar" ? "alert-success" : "alert-danger")">
    <strong>Status da Liga:</strong> @ViewBag.LigaStatus
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Total de Times</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.TotalTimes</h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Total de Jogadores</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.TotalJogadores</h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Total de Partidas</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.TotalPartidas</h5>
            </div>
        </div>
    </div>
</div>

<h2>Times da Liga</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cidade</th>
            <th>Estado</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var time in Model)
        {
            <tr>
                <td>@time.Nome</td>
                <td>@time.Cidade</td>
                <td>@time.Estado</td>
                <td>@(time.Status ? "Ativo" : "Inativo")</td>
            </tr>
        }
    </tbody>
</table>
